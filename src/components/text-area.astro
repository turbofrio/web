---
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"textarea"> & {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<textarea class:list={[className]} {...rest}></textarea>

<style>
  textarea {
    display: flex;

    border: solid 1px var(--gray-200);
    border-radius: 8px;
    padding: 14px 16px;
    width: 100%;

    color: var(--gray-800);
    font-size: 0.9375rem;
    font-weight: 500;
    line-height: 1;
  }

  textarea:focus-visible {
    border-color: var(--sky-500);
    outline: solid 1px var(--sky-500);
  }
</style>
