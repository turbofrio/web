---
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"input"> & {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<input class:list={[className]} {...rest} />

<style>
  input {
    display: flex;

    border: solid 1px var(--gray-200);
    border-radius: 8px;
    height: 46px;
    min-width: 0;
    padding: 14px 16px;
    width: 100%;

    color: var(--gray-800);
    font-size: 0.9375rem;
    font-weight: 500;
    line-height: 1;
  }

  input:focus-visible {
    border-color: var(--sky-500);
    outline: solid 1px var(--sky-500);
  }

  input[type="checkbox"] {
    accent-color: var(--sky-600);
    flex-shrink: 0;
    height: 16px;
    width: unset;
  }
</style>
